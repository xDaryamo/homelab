{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "flux": {
    "fileMatch": ["\\.yaml$"]
  },
  "kubernetes": {
    "fileMatch": ["\\.yaml$"]
  },
  "packageRules": [
    {
      "matchPaths": ["**/staging/**"],
      "additionalBranchPrefix": "staging-",
      "labels": ["staging"]
    },
    {
      "matchPaths": ["**/production/**", "**/base/**"],
      "additionalBranchPrefix": "prod-",
      "labels": ["production"]
    }
  ]
}