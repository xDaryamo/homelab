{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "flux": {
    "managerFilePatterns": [
      "/\\.yaml$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.yaml$/"
    ]
  },
  "packageRules": [
    {
      "matchFileNames": [
        "**/staging/**"
      ],
      "additionalBranchPrefix": "staging-",
      "labels": [
        "staging"
      ]
    },
    {
      "matchFileNames": [
        "**/production/**",
        "**/base/**"
      ],
      "additionalBranchPrefix": "prod-",
      "labels": [
        "production"
      ]
    }
  ]
}
